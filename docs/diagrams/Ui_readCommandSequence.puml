@startuml
''https://plantuml.com/sequence-diagram
skinparam sequenceReferenceBackgroundColor #f7807c
participant ":Ui" as ui
participant "SCANNER: Scanner" as scanner


-> ui ++: readCommand()
ui -> scanner ++: nextLine()
ui <-- scanner --: rawInput: String
ui -> ui ++: trim()
ui --> ui --: trimmedInput()
loop emptyInput
    ref over ui, scanner
        scanning input from user
    end ref
end
<-- ui --: input: String
@enduml